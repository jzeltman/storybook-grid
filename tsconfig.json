{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": false,
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2017",
            "dom"
        ],
        "listEmittedFiles": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "./lib",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es5",
    },
    "exclude": [
        "lib",
        "node_modules",
        "register.js",
        "src/constants.ts"
    ],
    "files": [
        "./src/decorators/react.tsx",
        "./src/register/index.tsx"
    ]
}